@using ProjectFastBgo.ViewModel.HomeVMs
@model ProjectFastBgo.ViewModel.HomeVMs.LoginVM

@{
    Layout = null;
    var uuid = Guid.NewGuid().ToString("N");
       Model.UUId = uuid;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>请登录</title>
    <link rel="stylesheet" href="/layui/css/layui.css">
    <script src="/jquery.min.js"></script>
    <script src="/jquery.haschange.js"></script>
    <script src="/jquery.cookie.js"></script>
    <script src="/layui/layui.all.js"></script>
    <script src="/_js/framework_layui.js"></script>
</head>
<style>
    .login {
        background-color: #364150 !important;
        font-family: Microsoft YaHei;
    }
    .login .content {
        background-color: #eceef1;
        -webkit-border-radius: 7px;
        -moz-border-radius: 7px;
        -ms-border-radius: 7px;
        -o-border-radius: 7px;
        border-radius: 7px;
        width: 400px;
        margin: 40px auto 10px auto;
        padding: 30px;
        padding-top: 10px;
        overflow: hidden;
        position: relative;
    }
    .login .copyright {
        text-align: center;
        margin: 0 auto 30px 0;
        padding: 10px;
        color: #7a8ca5;
        font-size: 13px;
    }
    .login .content .form-title {
        font-weight: 300;
        margin-bottom: 25px;
    }
    .login .content h3 {
        color: #4db3a5;
        text-align: center;
        font-size: 28px;
        font-weight: 400 !important;
    }
</style>
<body class="layui-layout-body login" style="text-align:center">
<div id="DONOTUSE_MAINPANEL" class="content" style="margin:10% auto;width: 30%;">
    <wt:form vm="@Model" old-post="true">
        <h3 class="form-title" style="font-family: Microsoft YaHei;">登陆</h3>
        <wt:row items-per-row="ItemsPerRowEnum.One">
            <wt:textbox field="ITCode" />
            <wt:textbox field="Password" is-password="true" />
        </wt:row>
        <div class="layui-row ">

            <div class="layui-col-md9">

                <div class="layui-form-item">
                    <label for="LoginVM_Code" class="layui-form-label"><font color="red">*</font>验证码:</label>
                    <div class="layui-input-block">
                        <input type="password" name="Code" value="" placeholder="" class="layui-input" id="LoginVM_Code" lay-verify="required" lay-filter="LoginVM_Codefilter">
                    </div>
                </div>

            </div>


            <div class="layui-col-md3">
                <img name="UUIdimg" id="img" src="@Html.Raw("/Login/ImageCode?uuid=" + uuid)" lay-filter="imgfilter">
            </div>

        </div>
        <wt:textbox field="UUId" style="display: none" hide-label="true" />

        <wt:row align="AlignEnum.Center">
            <wt:submitbutton text="登录" />
        </wt:row>
    </wt:form>
</div>
<div class="copyright">
    2015-2019 © 可兰达通用快速管理平台 重庆可兰达科技有限公司.
</div>
</body>
</html>
